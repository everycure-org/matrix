# Neo4j Connection Configuration
# Copy this file to .env and update with your actual values

# Neo4j connection URL
NEO4J_HOST=bolt://127.0.0.1:7687

# Neo4j username
NEO4J_USER=neo4j

# Neo4j password
NEO4J_PASSWORD=admin

# Neo4j database name
NEO4J_DATABASE=analytics

# Optional: PCA embeddings file path (can also be set via command line)
# PCA_FILEPATH=data/embeddings/reporting/topological_pca

# Optional: Performance tuning
# BATCH_SIZE=2000
# MAX_WORKERS=8
